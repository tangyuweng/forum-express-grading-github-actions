{{> restaurant-tabs routes='topRestaurants'}}

<h1>Top 10 人氣餐廳</h1>
<hr/>
<div class="d-flex flex-column align-items-center">
  {{#each restaurants}}
    <div class="card mb-3" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-4">
          <a href="/restaurants/{{this.id}}">
            <img src="{{this.image}}" class="img-fluid rounded-start" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
          </a>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><a class="link-primary" href="/restaurants/{{this.id}}">{{this.name}}</a></h5>
            <span class="bg-secondary badge">追蹤人數：{{this.favoritedCount}}</span>
            <p class="my-4 card-text" style="white-space: break-spaces;">{{this.description}}</p>
            <a href="/restaurants/{{this.id}}"><button class="btn btn-primary" type="button">Show</button></a>
            {{#if isFavorited}}
              <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
                <button type="submit" class="btn btn-danger m-1">移除最愛</button>
              </form>
            {{else}}
              <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
                <button type="submit" class="btn btn-primary m-1">加到最愛</button>
              </form>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>